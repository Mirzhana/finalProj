<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddContactActivity">
    <TextView
        android:id="@+id/nameTextView"
        android:text="Enter the Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/nameEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/mobileTextView"
        android:text="Enter the Mobile number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEditText"/>
    <EditText
        android:id="@+id/mobileEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/homeTextView"
        android:text="Enter the Home number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileEditText"/>
    <EditText
        android:id="@+id/homeEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/workTextView"
        android:text="Enter the Work number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeEditText"/>
    <EditText
        android:id="@+id/workEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/groupTextView"
        android:text="Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workEditText"/>
    <EditText
        android:id="@+id/groupEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupTextView"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/addBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#66bb6a"
        app:layout_constraintTop_toBottomOf="@id/groupEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Add Contact"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        />

</android.support.constraint.ConstraintLayout>